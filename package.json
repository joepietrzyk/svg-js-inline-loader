{
  "name": "svg-js-inline-loader",
  "version": "0.1.0",
  "description": "Inlines your SVG files into a Webpack module as a JavaScript function.",
  "keywords": [
    "svg",
    "webpack",
    "loader"
  ],
  "author": "Joseph Pietrzyk <joepietrzyk@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joepietrzyk/svg-js-inline-loader"
  },
  "bugs": {
    "url": "https://github.com/joepietrzyk/svg-js-inline-loader/issues"
  },
  "homepage": "https://github.com/joepietrzyk/svg-js-inline-loader",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "lint": "eslint",
    "format": "prettier --write .",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "build:esm": "tsc --module esnext --outDir lib/esm",
    "prebuild": "rimraf lib",
    "build": "pnpm build:cjs && pnpm build:esm",
    "test": "jest"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.10.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0"
  }
}
